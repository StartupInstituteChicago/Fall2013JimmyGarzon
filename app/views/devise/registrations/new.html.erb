<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {"parsley-validate" => "", 'data-validate' => "parsley"}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :required => true, :autofocus => true%></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :required => true, 'data-trigger' => 'change', 'data-required' =>'true', 'data-type' => 'email'  %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :required => true, 'data-trigger' => "change", 'data-rangelength' => '[6,10]', "parsley-equalto" => "#user_password" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :required => true, 'data-trigger' => "change", 'data-rangelength' => '[6,10]', "parsley-equalto" => "#user_password"  %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
