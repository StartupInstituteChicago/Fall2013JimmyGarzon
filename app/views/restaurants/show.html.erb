<%= image_tag @restaurant.image_url(:masthead).to_s %>


<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Categories:</strong>
  <% @restaurant.categories.each do |category| %>
  <%= category.name %>
  <% end %>

</p>

<p>
<% if @restaurant.menu.present? %>
	<strong>Menu:</strong>
	<%=link_to "Menu", @restaurant.menu_url  %>
<% end %>
</p>


<%= image_tag gmap_url(@restaurant) %>


<br>

<%= link_to "Back", restaurants_path %>


<% if @restaurant.user == current_user %>
	| <%= link_to 'Edit', edit_restaurant_path(@restaurant) %>

	| <%= link_to "Reservations",   restaurant_reservations_path(@restaurant) %>

<% else %>

	| <%= link_to "Make a reservation", new_restaurant_reservation_path(@restaurant) %>

<% end %>
