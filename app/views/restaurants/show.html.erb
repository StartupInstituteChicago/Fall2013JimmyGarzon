<%= image_tag @restaurant.image_url(:masthead).to_s %>


<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
<% if @restaurant.menu.present? %>
	<strong>Menu:</strong>
	<%=link_to "Menu", @restaurant.menu_url  %>
<% end %>
</p>


<%= image_tag gmap_url(@restaurant) %>


<br>

<%= link_to "Back", restaurants_path %>

<% if @restaurant.owner == current_owner %>
	| <%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
<% end %>
